<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <script data-main="/Scripts/App/Config" src="/Scripts/lib/require.js"></script>
</head>
<body class="bg-color-blueLight">
    <div id="page-header">
        <div class="page-header-content">
            <div style="width: 78%; float: left;margin-left:20px;margin-top:10px;">
                <h2>Robot Remote Control</h2>
            </div>
            <div style="width: 15%; float: left;margin-right:20px;">
                <div style="width: 100%; float: right;text-align:right;margin-top:20px;">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                        @Html.AntiForgeryToken()
                        <a id="logout" href="javascript:document.getElementById('logoutForm').submit()" style="font-size:20px;font-weight:bold;">Log out, @User.Identity.Name</a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="page snapped bg-color-custom fixed-header" style="height: 100%; width: 100%; background-color: #fff!important">
        <button class="command-button">
            Remote Control
        </button>
        <div class="avatar place-left" style="text-align: center">
            <img src="~/Images/tank.png" />
        </div>
        <div class="page fill">
            @RenderBody()
        </div>
    </div>
    <div class="app-bar fg-color-white" style="height: 250px; overflow: scroll">
    </div>
</body>
</html>
